extends template/layout

block content
    .container-content
        .ui.card(style="border: none!important").border-none
            .content
                .header= title
                .ui.menu.border-none
                    .item#new
                        i.icon.plus
                    .item#print
                        i.icon.print
            .content
                table.ui.celled.table.striped
                    thead
                        tr
                            th Identificacion
                            th Nombre
                            th Direccion
                            th Telefono
                            th Aciones
                    tbody
                        each proveedor in proveedores
                            tr
                                td= proveedor.identificacion
                                td= proveedor.nombre
                                td= proveedor.direccion
                                td= proveedor.telefono
                                td
                                    a(href="/proveedor").ui.button.blue editar
                                    a(href="/proveedor/eliminar/" + proveedor._id).ui.button.red eliminar
        .ui.modal.modal__new
            i.icon.close
            .header Nuevo Producto
            .content
                form(action="/proveedor/nuevo", method="post").ui.form
                    .field
                        label(for="identificacion") Identificacion
                        input#identificacion(type="text", name="identificacion" placeholder="Identificacion")
                    .field
                        label(for="nombre") Nombre
                        input#nombre(type="text", name="nombre" placeholder="Nombre")
                    .field
                        label(for="direccion") Direccion
                        input#direccion(type="text", name="direccion" placeholder="Direccion")
                    .field
                        label(for="telefono") Telefono
                        input#telefono(type="text", name="telefono" placeholder="Telefono")
                    button(type="submit").ui.button.primary Guardar
        .ui.modal.modal__print
