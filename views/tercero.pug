extends template/layout

block content
    .table-container
        .table-container__tools
            button.ui.button.blue#new Nuevo
            button.ui.button.blue#print Imprimir
        .table-container__content
            table.ui.celled.table.striped
                thead
                    tr
                        th Identificacion
                        th Nombre
                        th Direccion
                        th Telefono
                        th Aciones
                tbody
                    each tercero in terceros
                        tr
                            td= tercero.identificacion
                            td= tercero.nombre
                            td= tercero.direccion
                            td= tercero.telefono
                            td
                                a(href="/tercero").ui.compact.icon.button.blue 
                                    i.icon.edit
                                a(href="/tercero/eliminar/" + proveedor._id).ui.compact.icon.button.red
                                    i.icon.trash
    .ui.modal.modal__new
        i.icon.close
        .header Nuevo Producto
        .content
            form(action="/tercero/nuevo", method="post").ui.form
                .field
                    label(for="identificacion") Identificacion
                    input#identificacion(type="text", name="identificacion" placeholder="Identificacion")
                .field
                    label(for="nombre") Nombre
                    input#nombre(type="text", name="nombre" placeholder="Nombre")
                .field
                    label(for="direccion") Direccion
                    input#direccion(type="text", name="direccion" placeholder="Direccion")
                .field
                    label(for="telefono") Telefono
                    input#telefono(type="text", name="telefono" placeholder="Telefono")
                button(type="submit").ui.button.primary Guardar
    .ui.modal.modal__print